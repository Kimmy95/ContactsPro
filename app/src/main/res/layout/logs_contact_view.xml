<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="20dp"
    android:paddingLeft="10dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="12dp">
        <agency.tango.android.avatarview.views.AvatarView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/avatar"
            android:elevation="10dp"
            app:av_border_color="#FFFFFF"
            app:av_border_width="1dp"
            app:av_text_size_percentage="60"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/t1"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="17sp"
            android:layout_toLeftOf="@+id/t5"
            android:clickable="true"
            android:textAlignment="viewStart"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/t2"
            android:layout_below="@+id/t1"
            android:layout_marginTop="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t3"
            android:layout_below="@+id/t1"
            android:layout_toEndOf="@+id/t2"
            android:paddingLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t4"
            android:layout_below="@+id/t1"
            android:layout_toEndOf="@+id/t3"
            android:paddingLeft="5dp"/>
        <TextView
            android:id="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/t1"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text=" "
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_call_black_24dp"/>

    </RelativeLayout>
</LinearLayout>