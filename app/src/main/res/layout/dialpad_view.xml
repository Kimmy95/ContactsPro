<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.37"
        android:background="@drawable/border_green">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textColor="#252525"
            android:id="@+id/search_area"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/search_list"
            android:layout_below="@+id/search_area"
            android:scrollbars="vertical"
            android:scrollbarSize="7dp"
            android:scrollbarFadeDuration="100"
            android:paddingBottom="50dp"
            android:clipToPadding="false"
            android:divider="@null"
            android:dividerHeight="10dp"
            android:background="@drawable/border_blue_2"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.54">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/dialcontainer"
            android:elevation="10dp"
            android:background="@drawable/border_blue">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.83">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_centerInParent="true"
                    android:gravity="end"
                    android:paddingBottom="10dp"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:inputType="phone"
                    android:id="@+id/numberbox"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="0.17">
                <TextView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:id="@+id/backspace"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:longClickable="true"
                    android:background="@drawable/ic_backspace_black_24dp"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/keyboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dialcontainer">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="#aa00ff"
                    android:textStyle="bold"
                    android:shadowColor="#aa00ff"
                    android:shadowRadius="8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:textSize="30sp"
                    android:text="1"
                    android:id="@+id/key1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="#2962ff"
                    android:textStyle="bold"
                    android:shadowColor="#2962ff"
                    android:shadowRadius="8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:textSize="30sp"
                    android:text="2"
                    android:id="@+id/key2"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="#388e3c"
                    android:textStyle="bold"
                    android:shadowColor="#388e3c"
                    android:shadowRadius="8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:textSize="30sp"
                    android:text="3"
                    android:id="@+id/key3"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="#2962ff"
                    android:textStyle="bold"
                    android:shadowColor="#2962ff"
                    android:shadowRadius="8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:textSize="30sp"
                    android:text="4"
                    android:id="@+id/key4"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="#388e3c"
                    android:textStyle="bold"
                    android:shadowColor="#388e3c"
                    android:shadowRadius="8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:textSize="30sp"
                    android:text="5"
                    android:id="@+id/key5"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="#ffd600"
                    android:textStyle="bold"
                    android:shadowColor="#ffd600"
                    android:shadowRadius="8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:textSize="30sp"
                    android:text="6"
                    android:id="@+id/key6"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="#388e3c"
                    android:textStyle="bold"
                    android:shadowColor="#388e3c"
                    android:shadowRadius="8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:textSize="30sp"
                    android:text="7"
                    android:id="@+id/key7"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="#ffd600"
                    android:textStyle="bold"
                    android:shadowColor="#ffd600"
                    android:shadowRadius="8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:textSize="30sp"
                    android:text="8"
                    android:id="@+id/key8"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="#ff8f00"
                    android:textStyle="bold"
                    android:shadowColor="#ff8f00"
                    android:shadowRadius="8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:textSize="30sp"
                    android:text="9"
                    android:id="@+id/key9"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="#ffd600"
                    android:textStyle="bold"
                    android:shadowColor="#ffd600"
                    android:shadowRadius="8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:textSize="30sp"
                    android:text="*"
                    android:id="@+id/key10"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="0"
                    android:id="@+id/key0"
                    android:textColor="#ff8f00"
                    android:textStyle="bold"
                    android:shadowColor="#ff8f00"
                    android:shadowRadius="8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    android:text="#"
                    android:gravity="center"
                    android:id="@+id/key11"
                    android:textColor="#ff0000"
                    android:textStyle="bold"
                    android:shadowColor="#ff0000"
                    android:shadowRadius="8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:textSize="30sp"/>

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:backgroundTint="#388e3c"
        app:backgroundTint="#ec51f13c"
        android:id="@+id/call"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_call_black_24dp"/>

</LinearLayout>